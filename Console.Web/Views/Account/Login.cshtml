@model LoginModel

@{
    ViewBag.Title = "Login";
}
<h2>Log in</h2>

<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input type="text" asp-for="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password">Password</label>
            <input asp-for="Password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div>
            @Html.ActionLink("Forgot Password", "ForgotPassword", "Account")
        </div>       
        <div class="form-group">
            <label asp-for="RememberMe">Remember Me</label>
            <input asp-for="RememberMe" />
            <span asp-validation-for="RememberMe" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Log in" class="btn btn-outline-dark" />
            <a asp-action="Register" asp-controller="Account">Don't have an account yet?</a>
        </div>
    </div>
</form>

@section Scripts{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}